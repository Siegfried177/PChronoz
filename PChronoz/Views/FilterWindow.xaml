<Window x:Class="PChronoz.Views.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PChronoz.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="FilterWindow" Height="155" Width="300">

    <StackPanel Background="#1e1e1e">
        <TextBox Name="InputTextBox" Width="220" Margin="10" Padding="5" FontSize="16" KeyDown="ClickEnter"/>
        <Button Content="Aceptar" Width="100" Margin="10" Padding="7" Click="AcceptButton_Click"/>
    </StackPanel>
</Window>
