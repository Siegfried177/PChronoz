<UserControl x:Class="PChronoz.Views.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PChronoz.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid MouseDown="DragWindow" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Height="40" Width="40" Margin="7,0,0,0" Source="C:\Library\0\0 Y.png"/>
        
        <Label Grid.Column="1" Foreground="White" Content="Yu-Gi-Oh" FontSize="26" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <Button Content="—" Grid.Column="2" Style="{StaticResource TopBarButton}" Height="35" Margin="0,0,7.5,0" Width="35" Click="MinimizeWindow"/>
        
        <Button Content="⬜" Grid.Column="3" Style="{StaticResource TopBarButton}" Height="35" Margin="0,0,7.5,0" Width="35" Click="MaximizeWindow"/>
        
        <Button Content="X" Grid.Column="4" Style="{StaticResource TopBarButton}" Height="35" Margin="0,0,7.5,0" Width="35" Click="CloseWindow"/>
    </Grid>
</UserControl>
