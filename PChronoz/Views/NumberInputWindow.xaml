<Window x:Class="PChronoz.Views.NumberInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Enter Value" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBox Name="ValueTextBox" Width="150" Height="30" VerticalContentAlignment="Center" FontSize="16" Margin="0,17,0,17"/>
        <Button Grid.Row="1" Content="OK" Width="80" Height="30" VerticalAlignment="Center" Click="OkButton_Click" />
    </Grid>
</Window>